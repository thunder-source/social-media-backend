{
  "version": "0.2.0",
  "configurations": [
    
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Server (ts-node)",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "args": [
        "${workspaceFolder}/src/server.ts"
      ],
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**",
        "**/ts-node-dev-hook-**.js"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal"
    },
  ]
}
