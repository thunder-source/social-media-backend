# Server Configuration
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/social-media
MONGODB_POOL_SIZE=10
MONGODB_SERVER_SELECTION_TIMEOUT=30000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback
GOOGLE_SUCCESS_REDIRECT=http://localhost:3000

# Firebase Configuration
FIREBASE_STORAGE_BUCKET=your-firebase-storage-bucket.appspot.com
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"..."}

# Video Processing Configuration
# Set to 'true' to enable video compression (requires FFmpeg)
# Set to 'false' or leave unset to disable compression (faster uploads, larger files)
# Note: Video compression can be slow on hosting platforms like Render
ENABLE_VIDEO_COMPRESSION=false